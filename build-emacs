# This is the command to build Emacs with GCC 2.95.2
# using Windows command shell.

        d:> setgcc

in emacs-21.0.???/nt

	d:> configure --with-gcc

then
	d:> mkdir /usr/emacs-new

	d:> make USER_LDFLAGS="-L/usr/gcc/lib/gcc-lib/i386-pc-mingw32msv/2.95.2 -L/usr/gcc/i386-pc-mingw32/lib -s" INSTALL_DIR=/usr/emacs-new

	d:> make USER_LDFLAGS="-L/usr/gcc/lib/gcc-lib/i386-pc-mingw32msv/2.95.2 -L/usr/gcc/i386-pc-mingw32/lib -s" INSTALL_DIR=/usr/emacs-new install

then

	copy the right directories into /usr/emacs


(setq load-path '("d:/home/obry/projets/build/emacs/lisp" 
		  "d:/home/obry/projets/build/emacs/lisp/emacs-lisp" 
		  "d:/home/obry/projets/build/emacs/lisp/international" 
		  load-path))
