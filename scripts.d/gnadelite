
function gnadelite-vcs()
{
    echo git
    echo git+ssh://repo.or.cz/srv/git/gnadelite.git
}

function gnadelite-depends()
{
    echo libsqlite3-dev
}

function gnadelite-build()
{
    PREFIX=$1
    TARGET=$2

    cd build && PROCESSORS=$JOBS make prefix=$PREFIX
}

function gnadelite-install()
{
    PREFIX=$1
    TARGET=$2

    cd build &&
        make prefix=$PREFIX prepare_install &&
        make prefix=$PREFIX install
}
