
function gnadelite-vcs()
{
    echo git
    echo git+ssh://repo.or.cz/srv/git/gnadelite.git
}

function gnadelite-depends()
{
    echo libsqlite3-dev
}

function gnadelite-out-of-tree()
{
    echo false
}

function gnadelite-build()
{
    local PREFIX=$1
    local TARGET=$2

    PROCESSORS=$SCBI_JOBS make prefix=$PREFIX
}

function gnadelite-install()
{
    local PREFIX=$1
    local TARGET=$2

    make prefix=$PREFIX prepare_install && make prefix=$PREFIX install
}
