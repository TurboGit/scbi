
function libadalang-vcs()
{
    echo default
    echo none
    echo git
    echo https://github.com/AdaCore/libadalang
}

function libadalang-common-depends()
{
    echo gnatcoll-bindings-gmp
    echo libyaml-dev
}

function libadalang-stable-depends()
{
    libadalang-common-depends
    echo langkit/stable:stable
}

function libadalang-depends()
{
    libadalang-common-depends
    echo langkit
}

function libadalang-stable-env()
{
    local PREFIX=$1
    local TARGET=$2

    libadalang-env

    LAL=$SCBI_BDIR/libadalang
    add-to-var GPR_PROJECT_PATH $LAL/$TARGET-stable/install/share/gpr
    add-to-var PATH             $LAL/$TARGET-stable/install/bin
}

function libadalang-env()
{
    add-to-var LIBLANG_SUPPORT_EXTERNALLY_BUILT false
}

function libadalang-out-of-tree()
{
    echo false
}

function libadalang-stable-config()
{
    local PREFIX=$1
    local TARGET=$2
    local VARIANT=$3

    python3 ada/manage.py --no-langkit-support generate
}

function libadalang-config()
{
    local PREFIX=$1
    local TARGET=$2
    local VARIANT=$3

    python3 ada/manage.py generate
}

function libadalang-do-build()
{
    local PREFIX=$1
    local TARGET=$2

    local PRJ=$3

    GOPTS="-p -m -j$SCBI_JOBS"

    for KIND in static relocatable static-pic; do
        gprbuild $GOPTS -XLIBRARY_TYPE=$KIND -XXMLADA_BUILD=$KIND $PRJ
    done
}

function libadalang-stable-build()
{
    local PREFIX=$1
    local TARGET=$2
    local VARIANT=$3

    libadalang-do-build $PREFIX $TARGET \
                        ./build/lib/gnat/libadalang.gpr
}

function libadalang-build()
{
    local PREFIX=$1
    local TARGET=$2
    local VARIANT=$3

    libadalang-do-build $PREFIX $TARGET \
                        ./build/libadalang.gpr
}

function libadalang-do-install()
{
    local PREFIX=$1
    local TARGET=$2

    local PRJ=$3

    gprinstall --prefix=$PREFIX --uninstall libadalang

    BV="--build-var=LIBADALANG_BUILD --build-var=LIBRARY_TYPE"
    GOPTS="-p --prefix=$PREFIX $BV"

    for KIND in static relocatable static-pic; do
        gprinstall $GOPTS -XLIBRARY_TYPE=$KIND \
                   -XXMLADA_BUILD=$KIND --build-name=$KIND $PRJ
    done
}

function libadalang-stable-install()
{
    local PREFIX=$1
    local TARGET=$2
    local VARIANT=$3

    libadalang-do-install $PREFIX $TARGET \
                          ./build/lib/gnat/libadalang.gpr
}

function libadalang-install()
{
    local PREFIX=$1
    local TARGET=$2
    local VARIANT=$3

    libadalang-do-install $PREFIX $TARGET \
                          ./build/libadalang.gpr
}

function libadalang-stable-prefix()
{
    echo NONE
}
