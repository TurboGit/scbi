
function gimp-vcs()
{
    echo git
    echo https://github.com/GNOME/gimp
}

function gimp-out-of-tree()
{
    echo false
}

function gimp-depends()
{
    echo libmypaint:v1.3.0
    echo mypaint-brushes:v1.3.0
    echo libgegl:dev
    echo gtk-doc-tools
    echo libbabl-dev
    echo libgegl-dev
    echo libgexiv2-dev
    echo libpoppler-glib-dev
    echo python-gtk2-dev
    echo python-cairo-dev
    echo mypaint
    echo libmng-dev
    echo libxpm-dev
}

function gimp-env()
{
    system-compiler
    export PERL5LIB=.
}

function gimp-config()
{
    PREFIX=$1
    TARGET=$2

    LMP=/opt/gimp/libmypaint
    MPB=/opt/gimp/mypaint-brushes
    LGL=/opt/gimp/libgegl

    export PKG_CONFIG_PATH=$LMP/lib/pkgconfig:$LGL/lib/pkgconfig
    export PKG_CONFIG_PATH=$PKG_CONFIG_PATH:$MPB/share/pkgconfig
    export PATH=$LGL/bin:$PATH

    ./autogen.sh --prefix=$PREFIX
}

function gimp-build()
{
    PREFIX=$1
    TARGET=$2

    make -j$MJOBS
}

function gimp-install()
{
    PREFIX=$1
    TARGET=$2

    make install
}

function gimp-prefix()
{
    echo /opt/gimp/gimp
}
