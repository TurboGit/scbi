
function langkit-vcs()
{
    echo default
    echo none
    echo git
    echo https://github.com/AdaCore/langkit
}

function langkit-depends()
{
    echo gnatcoll-core
    echo gnatcoll-bindings
}

function langkit-out-of-tree()
{
    echo false
}

function langkit-build-env()
{
    local PREFIX=$1
    local TARGET=$2
    local VARIANT=$3

    export PYTHONPATH=$PWD
}

function langkit-stable-env()
{
    local PREFIX=$1
    local TARGET=$2

    langkit-env $PREFIX $TARGET stable

    LK=$SCBI_BDIR/langkit
    add-to-var GPR_PROJECT_PATH $LK/$TARGET-stable/install/share/gpr
}

function langkit-env()
{
    local PREFIX=$1
    local TARGET=$2
    local VARIANT=$3

    add-to-var PYTHONPATH $SCBI_BDIR/langkit/$TARGET-$VARIANT/build
}

function langkit-config()
{
    local PREFIX=$1
    local TARGET=$2
    local VARIANT=$3

    python scripts/build-langkit_support.py \
           generate
}

function langkit-build()
{
    local PREFIX=$1
    local TARGET=$2
    local VARIANT=$3

    python scripts/build-langkit_support.py \
           build
}

function langkit-install()
{
    local PREFIX=$1
    local TARGET=$2
    local VARIANT=$3

    python scripts/build-langkit_support.py \
           install $PREFIX
}

function langkit-stable-prefix()
{
    echo NONE
}
