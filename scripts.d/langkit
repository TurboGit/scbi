
function langkit-vcs()
{
    echo default
    echo none
    echo git
    echo https://github.com/AdaCore/langkit
}

function langkit-depends()
{
    echo gnatcoll-core
    echo gnatcoll-bindings
}

function langkit-out-of-tree()
{
    echo false
}

function langkit-build-env()
{
    local PREFIX=$1
    local TARGET=$2
    local VARIANT=$3

    export PYTHONPATH=$PWD
}

function langkit-stable-env()
{
    local PREFIX=$1
    local TARGET=$2

    langkit-env $PREFIX $TARGET stable

    LK=$SCBI_BDIR/langkit
    add-to-var GPR_PROJECT_PATH $LK/$TARGET-stable/install/share/gpr
}

function langkit-env()
{
    local PREFIX=$1
    local TARGET=$2
    local VARIANT=$3

    add-to-var PYTHONPATH $SCBI_BDIR/langkit/$TARGET-$VARIANT/build
}

function langkit-stable-config()
{
    local PREFIX=$1
    local TARGET=$2
    local VARIANT=$3

    python3 scripts/build-langkit_support.py \
            --library-types static,relocatable \
            generate
}

function langkit-config()
{
    local PREFIX=$1
    local TARGET=$2
    local VARIANT=$3

    # nothing to do, the sources are pre-generated
}

function langkit-do-build()
{
    local PREFIX=$1
    local TARGET=$2

    local PRJ=$3

    GOPTS="-p -m -j$SCBI_JOBS"

    for KIND in static relocatable static-pic; do
        gprbuild $GOPTS -XLIBRARY_TYPE=$KIND -XXMLADA_BUILD=$KIND $PRJ
    done
}

function langkit-stable-build()
{
    local PREFIX=$1
    local TARGET=$2
    local VARIANT=$3

    langkit-do-build $PREFIX $TARGET \
                     ./build/lib/gnat/langkit_support.gpr
}

function langkit-build()
{
    local PREFIX=$1
    local TARGET=$2
    local VARIANT=$3

    langkit-do-build $PREFIX $TARGET \
                     ./support/langkit_support.gpr
}

function langkit-do-install()
{
    local PREFIX=$1
    local TARGET=$2

    local PRJ=$3

    gprinstall --prefix=$PREFIX --uninstall langkit

    BV="--build-var=LANGKIT_BUILD --build-var=LIBRARY_TYPE"
    GOPTS="-p --prefix=$PREFIX $BV"

    for KIND in static relocatable static-pic; do
        gprinstall $GOPTS -XLIBRARY_TYPE=$KIND \
                   -XXMLADA_BUILD=$KIND --build-name=$KIND $PRJ
    done
}

function langkit-stable-install()
{
    local PREFIX=$1
    local TARGET=$2
    local VARIANT=$3

    langkit-do-install $PREFIX $TARGET \
                       ./build/lib/gnat/langkit_support.gpr
}

function langkit-install()
{
    local PREFIX=$1
    local TARGET=$2
    local VARIANT=$3

    langkit-do-install $PREFIX $TARGET \
                       ./support/langkit_support.gpr
}

function langkit-stable-prefix()
{
    echo NONE
}
