
function polyorb-vcs()
{
    echo git
    echo https://github.com/AdaCore/PolyORB.git
}

function polyorb-config()
{
    local PREFIX=$1
    local TARGET=$2

    ./support/reconfig
    ./configure --prefix=$PREFIX --with-appli-perso="corba dsa"
}

function polyorb-build()
{
    local PREFIX=$1
    local TARGET=$2

    make
}

function polyorb-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}
