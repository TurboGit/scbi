
function binutils-vcs()
{
    echo default
    echo none
    echo git
    echo http://sourceware.org/git/binutils-gdb.git
}

function binutils-out-of-tree()
{
    echo true
}

function binutils-build-env()
{
    system-compiler
}

function binutils-version()
{
    local PREFIX=$1
    local TARGET=$2

    TOOL=ld

    if [ $SCBI_HOST != $TARGET ]; then
        TOOL=${TARGET}-ld
    fi

    if [ "$(which $TOOL)" = "" ]; then
        echo $VERSION_ERROR
    else
        echo $($TOOL --version | head -1 | cut -d' ' -f5)
    fi
}

function binutils-cross-config()
{
    local PREFIX=$1
    local TARGET=$2

    CONF_OPT="--prefix=$PREFIX --disable-multilib --disable-gdb"

    ../src/configure --target=$TARGET $CONF_OPT
}

function binutils-config()
{
    local PREFIX=$1
    local TARGET=$2

    CONF_OPT="--prefix=$PREFIX --disable-multilib --disable-gdb"

    ../src/configure --build=$SCBI_HOST $CONF_OPT
}

function binutils-build()
{
    local PREFIX=$1
    local TARGET=$2

    DEBUG=$(get-build-type MAKE binutils false)

    if [ $DEBUG == true ]; then
       CFLAGS="-O0 -g -Wno-error"
    else
       CFLAGS="-O2 -g -Wno-error"
    fi

    make -j6 CFLAGS="$CFLAGS" CC=gcc
}

function binutils-cross-install()
{
    local PREFIX=$1
    local TARGET=$2

    # install into the partial gcc compiler too

    make install &&
        mkdir -p $SCBI_BDIR/pgcc/install/ &&
        rsync -a ../install/. $SCBI_BDIR/pgcc/install/
}

function binutils-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}
