
function c-darktable-vcs()
{
    echo default
    echo none
    echo git
    echo https://github.com/darktable-org/darktable.git
}

function c-darktable-out-of-tree()
{
    echo true
}

function c-darktable-build-depends()
{
    echo os@-cmake
    echo os@-python3-jsonschema
    echo os@-intltool
    echo os@-xsltproc
    echo os@-findbin
}

function c-darktable-clang-build-depends()
{
    echo os@-llvm-11
    echo os@-clang-11
}

function c-darktable-depends()
{
    echo os@-sqlite3-dev
    echo os@-png-dev
    echo os@-jpeg-dev
    echo os@-heif-dev
    echo os@-openjp2-dev
    echo os@-pugixml-dev
    echo os@-xml2-dev
    echo os@-lcms2-dev
    echo os@-tiff-dev
    echo os@-curl4
    echo os@-curl4-gnutls-dev
    echo os@-gphoto2-dev
    echo os@-openexr-dev
    echo os@-soup2-dev
    echo os@-lua5.4-dev
    echo os@-osmgpsmap-1.0-dev
    echo os@-graphicsmagick1-dev
    echo os@-colord-dev
    echo os@-colord-gtk-dev
    echo os@-gomp1
    echo os@-gmic-dev
    echo os@-cups2-dev
    echo os@-secret-dev
    echo os@-xml2-utils
    echo os@-lensfun-dev
    echo os@-rsvg2-dev
