
function c-binutils-vcs()
{
    echo default
    echo none
    echo git
    echo http://sourceware.org/git/binutils-gdb.git
}

function c-binutils-out-of-tree()
{
    echo true
}

function c-binutils-build-env()
{
    system-compiler
}

function c-binutils-version()
{
    local PREFIX=$1
    local TARGET=$2

    TOOL=ld

    if [[ $SCBI_HOST != $TARGET ]]; then
        TOOL=${TARGET}-ld
    fi

    if [[ "$(command -v $TOOL)" = "" ]]; then
        echo $VERSION_ERROR
    else
        echo $($TOOL --version | head -1 | cut -d' ' -f5)
    fi
}

function c-binutils-common-config-options()
{
    local PREFIX=$1
    local TARGET=$2
    local VARIANT=$3

    echo --prefix=$PREFIX
    echo --disable-nls
    echo --disable-werror
    echo --with-zlib
    echo --disable-compressed-debug-sections
    echo --disable-separate-code
    echo --disable-gdb
    echo --disable-gdbserver
    echo --disable-sim
    echo --disable-libquadmath
    echo --disable-readline
}

function c-binutils-config-options()
{
    local PREFIX=$1
    local TARGET=$2
    local VARIANT=$3

    echo --build=$SCBI_HOST
    echo --enable-gold
    echo --enable-plugins
}

function c-binutils-cross-config-options()
{
    local PREFIX=$1
    local TARGET=$2
    local VARIANT=$3

    echo --target=$TARGET
}

function c-binutils-config()
{
    local PREFIX=$1
    local TARGET=$2

    ../src/configure $(get-config-options $PREFIX $TARGET $VARIANT)
}

function c-binutils-build()
{
    local PREFIX=$1
    local TARGET=$2

    local DEBUG=$(get-build-type MAKE false)

    if [[ $DEBUG == true ]]; then
       CFLAGS="-O0 -g -Wno-error"
    else
       CFLAGS="-O2 -g -Wno-error"
    fi

    make -j$SCBI_JOBS CFLAGS="$CFLAGS" CC=gcc
}

function c-binutils-cross-install()
{
    local PREFIX=$1
    local TARGET=$2

    # install into the partial gcc compiler too

    make install &&
        mkdir -p $SCBI_BDIR/c-pgcc/install/ &&
        rsync -a ../install/. $SCBI_BDIR/c-pgcc/install/
}

function c-binutils-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}
