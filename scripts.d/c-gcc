
function c-gcc-vcs()
{
    echo default
    echo none
    echo git
    echo git+ssh://git.adacore.com/gcc
}

function c-gcc-build-env()
{
    local PREFIX=$1
    local TARGET=$2

    system-compiler
}

function c-gcc-config-options()
{
    local PREFIX=$1
    local TARGET=$2
    local VARIANT=$3

    echo --prefix=$PREFIX
    echo --build=$TARGET
    echo --target=$TARGET
    echo --disable-multilib
    echo --disable-libada
    echo --disable-nls
    echo --enable-languages=c,c++
}

function c-gcc-config()
{
    local PREFIX=$1
    local TARGET=$2
    local VARIANT=$3

    local OPTIONS=$(get-config-options $PREFIX $TARGET $VARIANT)

    ../src/configure $OPTIONS
}

function c-gcc-build()
{
    local PREFIX=$1
    local TARGET=$2

    make -j$SCBI_JOBS
}

function c-gcc-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}
