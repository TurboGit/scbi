
function c-tparser-vcs()
{
    echo default
    echo none
    echo git
    echo https://github.com/AdaCore/templates-parser
}

function c-tparser-out-of-tree()
{
    echo false
}

function c-tparser-cross-build-depends()
{
    local PREFIX=$1
    local TARGET=$2

    echo c-sandbox
}

function c-tparser-build-depends()
{
    local PREFIX=$1
    local TARGET=$2

    echo p-gnat
    echo c-gprbuild
}

function c-tparser-env()
{
    local PREFIX=$1
    local TARGET=$2

    add-to-var PATH             $PREFIX/bin
    add-to-var GPR_PROJECT_PATH $PREFIX/share/gpr
}

function c-tparser-cross-config()
{
    local PREFIX=$1
    local TARGET=$2

    rm -f makefile.setup &&
        make prefix=$PREFIX TARGET=$TARGET setup
}

function c-tparser-config()
{
    local PREFIX=$1
    local TARGET=$2

    rm -f makefile.setup &&
        make prefix=$PREFIX setup
}

function c-tparser-build()
{
    local PREFIX=$1
    local TARGET=$2

    make
}

function c-tparser-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}

function c-tparser-tests()
{
    local PREFIX=$1
    local TARGET=$2

    add-to-var PATH /opt/gnatpython/bin

    cd regtests && make test
}
