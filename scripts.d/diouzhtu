
function diouzhtu-update()
{
    local PREFIX=$1
    local TARGET=$2

    cd $GIT_REPO/diouzhtu && git pull
}

function diouzhtu-setup()
{
    local PREFIX=$1
    local TARGET=$2

    if [ ! -d src_cp ]; then
        ln -s $GIT_REPO/diouzhtu src_cp
    fi
}

function diouzhtu-build()
{
    local PREFIX=$1
    local TARGET=$2

    export AWS_BUILD=relocatable
    cd build && PROCESSORS=$JOBS make
}

function diouzhtu-install()
{
    local PREFIX=$1
    local TARGET=$2

    export ARGWIAD_ROOT=$HOME/opt/gwiad

    cd build &&  make install && make install_gwiad_plugins
}
