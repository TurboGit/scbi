
function c-gpr2-lib-vcs()
{
    echo default
    echo none
    echo git
    echo https://github.com/AdaCore/gpr
}

function c-gpr2-lib-build-depends()
{
    local PREFIX=$1
    local TARGET=$2
    local VARIANT=$3

    echo p-gnat
    echo c-gprbuild
    echo c-e3
    echo c-adasat
}

function c-gpr2-lib-depends()
{
    local PREFIX=$1
    local TARGET=$2
    local VARIANT=$3

    echo c-gnatcoll-core
    echo c-gnatcoll-bindings-iconv
    echo c-gnatcoll-bindings-gmp
    echo c-langkit
    echo c-gprconfig-kb
}

function c-gpr2-lib-env()
{
    local PREFIX=$1
    local TARGET=$2
    local VARIANT=$3

    add-to-var GPR_PROJECT_PATH $PREFIX/share/gpr
    add-to-var LD_LIBRARY_PATH  $PREFIX/lib
}

function do-gpr2-lib-config()
{
    local PREFIX=$1
    local TARGET=$2
    local BUILD=$3

    make PYTHONEXE=python3 -C langkit &&
        rm -f src/kb/gprconfig_kb &&
        ln -s $SCBI_BDIR/c-gprconfig-kb/src/db src/kb/gprconfig_kb &&
        make $BUILD prefix=$PREFIX PYTHON=python3 setup
}

function c-gpr2-lib-out-of-tree()
{
    local PREFIX=$1
    local TARGET=$2
    local VARIANT=$3

    echo false
}

function c-gpr2-lib-debug-config()
{
    local PREFIX=$1
    local TARGET=$2
    local VARIANT=$3

    do-gpr2-lib-config $PREFIX $TARGET "BUILD=debug"
}

function c-gpr2-lib-config()
{
    local PREFIX=$1
    local TARGET=$2
    local VARIANT=$3

    do-gpr2-lib-config $PREFIX $TARGET "BUILD=release"
}

function c-gpr2-lib-build()
{
    local PREFIX=$1
    local TARGET=$2
    local VARIANT=$3

    make build-lib-relocatable \
         build-lib-static-pic build-lib-static
}

function c-gpr2-lib-install()
{
    local PREFIX=$1
    local TARGET=$2
    local VARIANT=$3

    make GPRINSTALL=gprinstall \
         install-lib-relocatable \
         install-lib-static-pic install-lib-static
}

function c-gpr2-lib-prefix()
{
    local PREFIX=$1
    local TARGET=$2
    local VARIANT=$3

    echo NONE
}
