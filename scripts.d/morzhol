
function morzhol-update()
{
    PREFIX=$1
    TARGET=$2

    cd $GREPO/morzhol && git pull
}

function morzhol-setup()
{
    PREFIX=$1
    TARGET=$2

    if [ ! -d src_cp ]; then
        ln -s $GREPO/morzhol src_cp
    fi
}

function morzhol-build()
{
    PREFIX=$1
    TARGET=$2

    cd build &&
    if [ $HOST == $TARGET ]; then
        PROCESSORS=4 make
    else
        PROCESSORS=4 make GNAT=$TARGET-gnat prefix=$PREFIX/$TARGET
    fi
}

function morzhol-install()
{
    PREFIX=$1
    TARGET=$2

    cd build &&
    if [ $HOST == $TARGET ]; then
        make install
    else
        make OS=Windows_NT prefix=$PREFIX/$TARGET install
    fi
}
