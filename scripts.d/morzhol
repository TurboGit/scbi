
function morzhol-update()
{
    PREFIX=$1
    TARGET=$2

    cd $GREPO/morzhol && git pull
}

function morzhol-setup()
{
    PREFIX=$1
    TARGET=$2

    if [ ! -d src ]; then
        ln -s $GREPO/morzhol src
    fi
}

function morzhol-build()
{
    PREFIX=$1
    TARGET=$2

    cd src && PROCESSORS=4 make
}

function morzhol-install()
{
    PREFIX=$1
    TARGET=$2

    cd src &&  make install
}
