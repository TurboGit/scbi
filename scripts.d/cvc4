
function cvc4-vcs()
{
    echo default
    echo none
    echo git
    echo https://github.com/AdaCore/cvc4
}

function cvc4-depends()
{
    echo antlr3
    echo libantlr3c-dev
    echo libboost-dev
}

function cvc4-out-of-tree()
{
    echo false
}

function cvc4-config()
{
    local PREFIX=$1
    local TARGET=$2

    system-compiler

    (
        cd cvc4
        ./autogen.sh
        ./configure --prefix=$PREFIX
    )
}

function cvc4-build()
{
    local PREFIX=$1
    local TARGET=$2

    system-compiler

    cd cvc4 && make -j$MSCBI_JOBS
}

function cvc4-install()
{
    local PREFIX=$1
    local TARGET=$2

    system-compiler

    cd cvc4 && make install
}
