
function aws-vcs()
{
    echo git
    echo https://github.com/AdaCore/aws
}

function aws-depends()
{
    echo xmlada
    echo asis
}

function aws-tar()
{
    local VERSION=$1

    echo default
    echo none
    echo none
    echo aws-$VERSION-src.tar.gz
}

function aws-cross-config()
{
    local PREFIX=$1
    local TARGET=$2

    rm -f makefile.setup &&
        make prefix=$PREFIX ASIS=false ZLIB=false TARGET=$TARGET setup
}

function aws-config()
{
    local PREFIX=$1
    local TARGET=$2

    rm -f makefile.setup &&
        make prefix=$PREFIX setup
}

function aws-build()
{
    local PREFIX=$1
    local TARGET=$2

    make
}

function aws-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}

function aws-tests()
{
    local PREFIX=$1
    local TARGET=$2

    (
        gpython-env
        cd regtests && ./testsuite.py --jobs=4
    )

    display-file build/regtests/out/report
}
