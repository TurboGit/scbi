
function s-llvm-vcs()
{
    echo default
    echo none
    echo git
    echo https://github.com/llvm/llvm-project.git
}

function s-llvm-build-depends()
{
    echo cmake
}

function s-llvm-env()
{
    local PREFIX=$1
    local TARGET=$2

    add-to-var PATH            $PREFIX/bin
    add-to-var LD_LIBRARY_PATH $PREFIX/lib
    add-to-var C_INCLUDE_PATH  $PREFIX/include
}

function s-llvm-config()
{
    local PREFIX=$1
    local TARGET=$2

    cmake -G "Unix Makefiles" -DCMAKE_EXPORT_COMPILE_COMMANDS=ON  \
          -DCMAKE_INSTALL_PREFIX=$PREFIX \
          -DCMAKE_BUILD_TYPE=$(get-build-type CMAKE s-llvm Release) \
          -DLLVM_ENABLE_PROJECTS="llvm" \
          -DLLVM_ENABLE_DUMP=ON  \
          -DLLVM_ENABLE_ASSERTIONS=ON  \
          -DLLVM_INSTALL_UTILS=ON  \
          -DLLVM_BUILD_LLVM_DYLIB=ON \
          -DLLVM_TARGETS_TO_BUILD="AArch64;ARM;NVPTX;X86" ../src/llvm
}

function s-llvm-build()
{
    local PREFIX=$1
    local TARGET=$2

    make -j$SCBI_JOBS
}

function s-llvm-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}
