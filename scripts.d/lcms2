
function lcms2-vcs()
{
    echo git
    echo http://github.com/mm2/Little-CMS
}

function lcms2-config()
{
    PREFIX=$1
    TARGET=$2

    (
        system-compiler

        ../src/configure --prefix=$dprefix
    )
}

function lcms2-build()
{
    PREFIX=$1
    TARGET=$2

    (
        system-compiler

        make -j4
    )
}

function lcms2-install()
{
    PREFIX=$1
    TARGET=$2

    (
        system-compiler

        make install
    )
}

function lcms2-prefix()
{
    echo /opt/darktable
}
