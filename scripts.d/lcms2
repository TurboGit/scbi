
function lcms2-vcs()
{
    echo git
    echo http://github.com/mm2/Little-CMS
}

function lcms2-env()
{
    system-compiler
}

function lcms2-config()
{
    local PREFIX=$1
    local TARGET=$2

    ../src/configure --prefix=$PREFIX
}

function lcms2-build()
{
    local PREFIX=$1
    local TARGET=$2

    make -j4
}

function lcms2-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}

function lcms2-prefix()
{
    echo /opt/darktable
}
