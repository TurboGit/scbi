
function alt-ergo-vcs()
{
    echo default
    echo none
    echo git
    echo https://github.com/AdaCore/alt-ergo
}

function alt-ergo-depends()
{
    echo ocaml
    echo libzarith-ocaml-dev
    echo libzarith-ocaml
    echo libzip-ocaml-dev
    echo ocplib-simplex-ocaml-dev
    echo liblablgtksourceview2-ocaml-dev
}

function alt-ergo-build-env()
{
    local PREFIX=$1
    local TARGET=$2

    system-compiler
}

function alt-ergo-out-of-tree()
{
    echo false
}

function alt-ergo-config()
{
    local PREFIX=$1
    local TARGET=$2

    ./configure --prefix=$PREFIX
}

function alt-ergo-build()
{
    local PREFIX=$1
    local TARGET=$2

    make -j$SCBI_MAKE_JOBS
}

function alt-ergo-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}
