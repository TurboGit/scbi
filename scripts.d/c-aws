
function c-aws-vcs()
{
    echo default
    echo none
    echo git
    echo https://github.com/AdaCore/aws
}

function c-aws-tar()
{
    local VERSION=$1

    echo default
    echo none
    echo none
    echo none
    echo aws-$VERSION-src.tar.gz
}

function c-aws-out-of-tree()
{
    echo false
}

function c-aws-cross-build-depends()
{
    echo c-sandbox
}

function c-aws-tests-depends()
{
    echo c-sandbox
    echo c-e3
    echo c-python3-modules/net
}

function c-aws-build-depends()
{
    echo c-gprbuild
    echo c-libadalang-tools
}

function c-aws-depends()
{
    echo p-gnat
    echo c-xmlada
    echo c-libadalang
}

function c-aws-env()
{
    local PREFIX=$1
    local TARGET=$2

    add-to-var PATH             $PREFIX/bin
    add-to-var GPR_PROJECT_PATH $PREFIX/share/gpr
}

function c-aws-common-config-options()
{
    local PREFIX=$1
    local TARGET=$2
    local VARIANT=$3

    echo prefix=$PREFIX
    echo DEBUG=$(get-build-type AWS true)
}

function c-aws-openssl-config-options()
{
    local PREFIX=$1
    local TARGET=$2
    local VARIANT=$3

    echo SOCKET=openssl
}

function c-aws-gnutls-config-options()
{
    local PREFIX=$1
    local TARGET=$2
    local VARIANT=$3

    echo SOCKET=gnutls
}

function c-aws-cross-config()
{
    local PREFIX=$1
    local TARGET=$2
    local VARIANT=$3

    local OPTIONS=$(get-config-options $PREFIX $TARGET $VARIANT)

    rm -f makefile.setup &&
        make LAL=false ZLIB=false TARGET=$TARGET $OPTIONS setup
}

function c-aws-config()
{
    local PREFIX=$1
    local TARGET=$2
    local VARIANT=$3

    local OPTIONS=$(get-config-options $PREFIX $TARGET $VARIANT)

    rm -f makefile.setup && make $OPTIONS setup
}

function c-aws-build()
{
    local PREFIX=$1
    local TARGET=$2

    make
}

function c-aws-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}

function c-aws-tests()
{
    local PREFIX=$1
    local TARGET=$2
    local VARIANT=$3
    local OPTIONS="$4"

    (
        add-to-var PATH /opt/gnatpython/bin
        cd regtests &&
            rm -fr results &&
            python2 ./gen_system_tags.py ../makefile.setup &&
            python2 ./testsuite.py --jobs=$SCBI_JOBS \
                    --temp-dir=$PWD/results --disable-cleanup \
                    $OPTIONS
    )

    display-file regtests/out/report
}
