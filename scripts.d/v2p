
function v2p-update()
{
    PREFIX=$1
    TARGET=$2

    cd $GREPO/v2p && git pull
}

function v2p-setup()
{
    PREFIX=$1
    TARGET=$2

    if [ ! -d src_cp ]; then
        ln -s $GREPO/v2p src_cp
    fi
}

function v2p-build()
{
    PREFIX=$1
    TARGET=$2

    cd build && PROCESSORS=4 make
}

function v2p-install()
{
    PREFIX=$1
    TARGET=$2

    export ARGWIAD_ROOT=$HOME/opt/gwiad

    cd build && make install_gwiad_plugin
}
