
function libadalang-tools-vcs()
{
    echo default
    echo none
    echo git
    echo https://github.com/AdaCore/libadalang-tools
}

function libadalang-tools-depends()
{
    # libadalang-tool must be built using the stable
    # branch of langkit & libadalang

    echo libadalang/stable:stable
}

function libadalang-tools-out-of-tree()
{
    echo false
}

function libadalang-tools-build-env()
{
    local PREFIX=$1
    local TARGET=$2

    export LIBRARY_TYPE=relocatable
}

function libadalang-tools-build()
{
    local PREFIX=$1
    local TARGET=$2

    make
}

function libadalang-tools-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install-strip DESTDIR=$PREFIX
}
