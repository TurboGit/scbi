
function gwiad-update()
{
    local PREFIX=$1
    local TARGET=$2

    cd $GIT_REPO/gwiad && git pull
}

function gwiad-setup()
{
    local PREFIX=$1
    local TARGET=$2

    if [ ! -d src_cp ]; then
        ln -s $GIT_REPO/gwiad src_cp
    fi
}

function gwiad-out-of-tree()
{
    echo false
}

function gwiad-config()
{
    local PREFIX=$1
    local TARGET=$2

    cd build && rm mk.install
}

function gwiad-build()
{
    local PREFIX=$1
    local TARGET=$2

    export AWS_BUILD=relocatable
    cd build && make setup && PROCESSORS=$JOBS make
}

function gwiad-install()
{
    local PREFIX=$1
    local TARGET=$2

    cd build && make install && make install_server
}
