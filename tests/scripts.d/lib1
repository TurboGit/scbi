
function lib1-vcs()
{
    echo default
    echo none
    echo git
    echo ${TESTREPOS}/lib1.bundle
}

function lib1-archive()
{
    local VERSION=$1

    echo default
    echo none
    echo none
    echo none
    echo lib1-$VERSION-src.tar.bz2
}

function lib1-patches()
{
    local PREFIX=$1
    local TARGET=$2
    local VARIANT=$3

    echo lib1-0-fix.patch
}

function lib1-variant-no-patch-patches()
{
    local PREFIX=$1
    local TARGET=$2
    local VARIANT=$3

    echo
}

function lib1-build-env()
{
    local PREFIX=$1
    local TARGET=$2

    export C_INCLUDE_PATH=$PWD/include:$C_INCLUDE_PATH
    export LIBRARY_PATH=.:$PWD/lib:$LIBRARY_PATH
    export LD_LIBRARY_PATH=.:$PWD/lib:$LD_LIBRARY_PATH
}

function lib1-env()
{
    local PREFIX=$1
    local TARGET=$2

    add-to-var C_INCLUDE_PATH  $PREFIX/include
    add-to-var LD_LIBRARY_PATH $PREFIX/lib
    add-to-var LIBRARY_PATH    $PREFIX/lib
}

function lib1-out-of-tree()
{
    echo false
}

function lib1-build()
{
    local PREFIX=$1
    local TARGET=$2

    rm -f *.o
    make
}

function lib1-install()
{
    local PREFIX=$1
    local TARGET=$2

    mkdir -p $PREFIX/include
    mkdir -p $PREFIX/lib
    cp liblib1.so $PREFIX/lib
    cp lib1.h $PREFIX/include
}

function lib1-tests()
{
    local PREFIX=$1
    local TARGET=$2

    ./main
    return 0
}
