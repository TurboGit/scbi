
function mainlib-vcs()
{
    echo default
    echo none
    echo git
    echo ${TESTREPOS}/mainlib.bundle
}

function mainlib-depdir-post-setup()
{
    local PREFIX=$1
    local TARGET=$2

    echo @@@LIB1-INS ${SCBI_MODULES_DIR["lib1"]}
    echo @@@LIB1-SRC ${SCBI_MODULES_DIR["lib1@src"]}
    echo @@@LIB1-BLD ${SCBI_MODULES_DIR["lib1@build"]}
}

function mainlib-depends()
{
    echo lib1
}

function mainlib-out-of-tree()
{
    echo false
}

function mainlib-env()
{
    local PREFIX=$1
    local TARGET=$2

    add-to-var PATH $PREFIX/bin
}

function mainlib-build()
{
    local PREFIX=$1
    local TARGET=$2

    rm -f *.o
    make
}

function mainlib-install()
{
    local PREFIX=$1
    local TARGET=$2

    mkdir -p $PREFIX/bin
    cp mainlib $PREFIX/bin
}

function mainlib-tests()
{
    local PREFIX=$1
    local TARGET=$2

    ./mainlib
    return 0
}
