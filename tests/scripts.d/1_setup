[[ -z $SCBI_ROOT ]]     && SCBI_ROOT=$PWD/.root
[[ -z $SCBI_BDIR ]]     && SCBI_BDIR=$SCBI_ROOT/builds
[[ -z $SCBI_PREFIX ]]   && SCBI_PREFIX=$SCBI_BDIR/install
[[ -z $SCBI_ARCHIVES ]] && SCBI_ARCHIVES=$SCBI_ROOT/.archives
[[ -z $SCBI_PATCH ]]    && SCBI_PATCH=$SCBI_ROOT/.patches
[[ -z $SCBI_LOGS ]]     && SCBI_LOGS=$SCBI_BDIR/.logs
[[ -z $SCBI_GIT_REPO ]] && SCBI_GIT_REPO=$SCBI_ROOT/git
