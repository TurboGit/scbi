
with-variant ng

function noarchive-vcs()
{
    echo default
    echo none
    echo git
    echo ${TESTREPOS}/lib1.bundle
}

function noarchive-archive()
{
    local VERSION=$1

    echo default
    echo none
    echo none
    echo none
    echo noarchive-$VERSION-src.tar.bz2
}

function noarchive-patches()
{
    local PREFIX=$1
    local TARGET=$2
    local VARIANT=$3

    echo noarchive-0-fix.patch
}

function noarchive-build-env()
{
    local PREFIX=$1
    local TARGET=$2

    set-var C_INCLUDE_PATH  $PWD/include:$C_INCLUDE_PATH
    set-var LIBRARY_PATH    .:$PWD/lib:$LIBRARY_PATH
    set-var LD_LIBRARY_PATH .:$PWD/lib:$LD_LIBRARY_PATH
}

function noarchive-env()
{
    local PREFIX=$1
    local TARGET=$2

    add-to-var C_INCLUDE_PATH  $PREFIX/include
    add-to-var LD_LIBRARY_PATH $PREFIX/lib
    add-to-var LIBRARY_PATH    $PREFIX/lib
}

function noarchive-out-of-tree()
{
    echo false
}

function noarchive-build()
{
    local PREFIX=$1
    local TARGET=$2

    rm -f *.o
    make
}

function noarchive-install()
{
    local PREFIX=$1
    local TARGET=$2

    mkdir -p $PREFIX/include
    mkdir -p $PREFIX/lib
    cp liblib1.so $PREFIX/lib
    cp lib1.h $PREFIX/include
}
