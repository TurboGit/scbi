# test build plan

RUNS ./scbi --no-patch --purge:only lib1

RUNS ./scbi --no-patch --purge:only lib2

# =================== plan v2 (lib1:v2 lib2)
RUNS ./scbi --no-patch --tests --plan=v2 --deps mainmult

