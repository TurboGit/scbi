EOF

RUNS cat .root/builds/.logs/*test17*build.log

CLEAN-DIFF <<EOF
in build
ROOT_DIR /this/is/it
ABC_ROOT /perfect/here
PATH     /var:/tmp:/bin:/usr/bin
CONF17   two:one
EOF

RUNS cat .root/builds/.logs/*test17*install.log

CLEAN-DIFF <<EOF
in install
ROOT_DIR /this/is/it
ABC_ROOT /perfect/here
PATH     /var:/tmp:/bin:/usr/bin
CONF17   two:one
EOF

function define-var()
{
    local ACTION=$1
    local VAR=$2
    local VALUE=$3

    echo $ACTION $VAR $VALUE
}
declare -fx define-var

# In driver:
export PATH=/bin:/usr/bin
RUNS source .root/builds/test17/build/.log/env.cmd

CLEAN-DIFF <<EOF
ADD ROOT_DIR /this/is/it
ADD ROOT_DIR /this/is/it
ADD ROOT_DIR /this/is/it
ADD PATH /tmp
ADD ABC_ROOT /perfect/here
ADD CONF17 one
ADD CONF17 two
ADD PATH /usr/bin
ADD PATH /var
EOF
