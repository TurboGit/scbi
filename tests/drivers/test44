# check skip and command line

# echo ========== lib1 skip
NRUNS ./scbi --plan=skip --deps mainmult

sed -i '/#include/d;/^make:/d;/~~~~~/d;/<builtin>/d;/\^$/d' ${OSHT_STDIO}

