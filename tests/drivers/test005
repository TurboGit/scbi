# check that dependents versions are properly built
#

RUNS ./scbi --no-patch lib1

# ============ build mainlib + deps (no compilation of lib1 expected)
RUNS ./scbi --no-patch --tests --deps mainlib

CLEAN-DIFF <<EOF
